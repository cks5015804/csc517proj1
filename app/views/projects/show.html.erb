
<p>
  <b>Title:</b>
  <%= @project.title %><br><br>
  <b>Description:</b><br>
  <%= @project.description %><br><br>

  <b>Stories:</b><br>
  <% if @stories and @stories.size > 0 %>
      <% @stories.each do |story| %>
          <tr>
            <td><%= story.title %></td>
            <td><%= link_to 'Show', story %></td><br>
          </tr>
      <% end %>
  <% else %>
      <tr><td>None</td></tr>
  <% end %>

</p>
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
